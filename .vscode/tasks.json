{
    "version": "2.0.0",
    "tasks": [
        {
          "type": "shell",
          "label": "g++ build active file",
          "command": "/usr/bin/g++",
          "args": ["-g", "${workspaceFolder}/src/tracer.cpp", "-o", "${workspaceFolder}/bld/tracer", "-std=c++11", "-pthread", "-Ofast"],
          "options": {
            "cwd": "/usr/bin"
          },
          "problemMatcher": ["$gcc"],
          "group": "build"
        },
        {
          "type": "shell",
          "label": "run ray tracer",
          "command": "./bld/tracer",
          "group": {
            "kind": "build",
            "isDefault": true
          },
          "dependsOn": ["g++ build active file"]
        },
    ]
  }